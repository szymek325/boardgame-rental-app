<Page x:Class="Rental.WPF.View.ClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Rental.WPF.View"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsPage">
    <Grid>
        <TextBlock x:Name="PageName" HorizontalAlignment="Center" Margin="0,10,0,0" Text="Clients" TextWrapping="Wrap"
                   VerticalAlignment="Top" Height="40" Width="364" RenderTransformOrigin="0.5,0.414"
                   TextAlignment="Center" FontSize="36" />
        <ListView x:Name="ClientsGrid" Margin="19,78,19,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="FirstName" DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="LastName" DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="ContactNumber" DisplayMemberBinding="{Binding ContactNumber}"/>
                    <GridViewColumn Header="CreationTime" DisplayMemberBinding="{Binding CreationTime}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>