<Page x:Class="Rental.WPF.View.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Rental.WPF.View"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage"
      ShowsNavigationUI="False">

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Home" />
                <MenuItem Header="Clients" Click="GoToClients" />
                <MenuItem Header="Games" Click="GoToGames" />
                <MenuItem Header="Rentals" Click="GoToGames" />
            </Menu>
            <Frame x:Name="MainFrame" />
        </DockPanel>
    </Grid>
</Page>